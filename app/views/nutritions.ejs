<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/_navbar.ejs') %>

  <body>
    <div class="container">
      <div class="row">
        <div class="d-flex justify-content-between align-items-center">
          <h1>Nutrition List</h1>
          <button
            type="button"
            class="btn btn-outline-success"
            data-bs-toggle="modal"
            data-bs-target="#addNutritionModal"
          >
            Add Nutrition
          </button>
        </div>
      </div>

      <!-- Modal -->
      <div
        class="modal fade"
        id="addNutritionModal"
        tabindex="-1"
        aria-labelledby="addNutritionModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addNutritionModalLabel">
                Add Nutrition
              </h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <form method="POST" action="/nutrition/add-nutrition">
              <div class="modal-body">
                <div class="form-group">
                  <label for="name">Name</label>
                  <input
                    type="text"
                    class="form-control"
                    id="name"
                    name="name"
                    required
                  />
                </div>
                <!-- <div class="form-group">
              <label for="description">Description</label>
              <textarea class="form-control" id="description" name="description" rows="3"></textarea>
            </div> -->
                <div class="form-group">
                  <label for="calories">Calories</label>
                  <input
                    type="number"
                    class="form-control"
                    id="calories"
                    name="calories"
                    min="1"
                    required
                  />
                </div>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button type="submit" class="btn btn-primary">
                  Add Nutrition
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- End of modal -->

      <hr />
      <div class="row">
        <% nutritions.forEach((nutrition) => { %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= nutrition.name %></h5>
              <p class="card-text"><%= nutrition.calories %> calories</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/nutrition/update-nutrition/<%= nutrition.id %>" class="btn btn-sm btn-outline-secondary">Edit</a>
                  <a href="/nutrition/delete-nutrition/<%= nutrition.id %>" class="btn btn-sm btn-outline-danger">Delete</a>
                </div>
                <small class="text-muted"
                  ><%= nutrition.createdAt.toLocaleDateString() %></small>
              </div>
                </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <!-- Container end-->
  </body>

  <%- include('./partials/_footer.ejs') %>
</html>
